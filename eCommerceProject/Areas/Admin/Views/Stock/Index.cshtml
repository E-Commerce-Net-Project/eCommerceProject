@model List<ResultStockDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12">
    <div class="table-responsive">
        <table class="table table-hover table-custom spacing8">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Renk</th>
                    <th>Beden</th>
                    <th>Stok</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stock in Model)
                {
                    <tr>
                        <td class="w60">
                            <img src="@stock.Product.CoverImage" data-toggle="tooltip" data-placement="top" title="Name" alt="Stock" class="w35 rounded">
                        </td>
                        <td>
                            <a href="javascript:void(0);" title="">@stock.Color.Name</a>
                        </td>
                        <td>
                            <a href="javascript:void(0);" title="">@stock.BodySize.Name</a>
                        </td>
                        <td>
                            <b>@stock.StockQuantity</b>
                        </td>
                        <td class="text-right">
                            <div class="dropdown">
                                <a class="btn btn-sm btn-icon-only text-dark" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-ellipsis-v"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                    <a class="dropdown-item" href="/Admin/Stock/UpdateStock/@stock.ID"><i class="fa fa-pencil mx-0"></i> Güncelle</a>
                                    <a class="dropdown-item" href="/Admin/Stock/DeleteStock/@stock.ID"><i class="fa fa-trash mx-0"></i> Sil</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>