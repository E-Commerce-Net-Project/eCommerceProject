@model CreateStockDto

@{
    ViewData["Title"] = "AddStock";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-md-12">
    <div class="card">
        <div class="header">
            <h2> Yeni Stok Ekleme Sayfası</h2>
        </div>
        <div class="body">
            <form method="post" class="forms-sample">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Renk : </span>
                    </div>
                    @Html.DropDownListFor(x => x.ColorID, (List<SelectListItem>)ViewBag.colorName, "Renk seçiniz.", new { @class = "form-control", required = "required" })
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Beden : </span>
                    </div>
                    @Html.DropDownListFor(x => x.BodySizeID, (List<SelectListItem>)ViewBag.bodySizeName, "Beden seçiniz.", new { @class = "form-control", required = "required" })
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Stok Adedi : </span>
                    </div>
                    <input type="text" asp-for="StockQuantity" class="form-control" placeholder="Stok adedini giriniz." aria-describedby="basic-addon1">
                </div>

                <button type="submit" class="btn btn-primary me-2 col-12">Stoğu Ekle!</button>
            </form>
        </div>
    </div>
</div>

