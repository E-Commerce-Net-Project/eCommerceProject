@model UpdateGenreCategoryDto

@{
    ViewData["Title"] = "UpdateGenreCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-md-12">
    <div class="card">
        <div class="header">
            <h2> Kategori Türü Güncelleme Sayfası</h2>
        </div>
        <div class="body">
            <form method="post" class="forms-sample">
                <input type="hidden" asp-for="ID" />
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Kategori Türü Adı : </span>
                    </div>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Kategori tür adını giriniz." aria-describedby="basic-addon1">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Bağlı Olduğu Alt Kategori : </span>
                    </div>
                    @Html.DropDownListFor(x=>x.SubCategoryID,(List<SelectListItem>)ViewBag.subCategoryName,"Alt kategori seçiniz.",new {@class="form-control", required = "required" })
                </div>

                <button type="submit" class="btn btn-primary me-2 col-12">Kategori Türünü Güncelle!</button>
            </form>
        </div>
    </div>
</div>

