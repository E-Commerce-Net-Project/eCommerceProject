@model CreateSubCategoryDto

@{
    ViewData["Title"] = "AddSubCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-md-12">
    <div class="card">
        <div class="header">
            <h2> Yeni Alt Kategori Ekleme Sayfası</h2>
        </div>
        <div class="body">
            <form method="post" class="forms-sample">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Alt Kategori Adı : </span>
                    </div>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Alt kategori adını giriniz." aria-describedby="basic-addon1">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Bağlı Olduğu Ana Kategori : </span>
                    </div>
                    @Html.DropDownListFor(x=>x.MainCategoryID,(List<SelectListItem>)ViewBag.mainCategoryName,"Ana kategori seçiniz.",new {@class="form-control", required = "required" })
                </div>

                <button type="submit" class="btn btn-primary me-2 col-12">Alt Kategoriyi Ekle!</button>
            </form>
        </div>
    </div>
</div>