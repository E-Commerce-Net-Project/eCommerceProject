@model UpdateTagDto

@{
    ViewData["Title"] = "UpdateTag";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-md-12">
    <div class="card">
        <div class="header">
            <h2> Etiket Güncelleme Sayfası</h2>
        </div>
        <div class="body">
            <form method="post" class="forms-sample">
                <input type="hidden" asp-for="ID" />
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Etiket Adı : </span>
                    </div>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Etiket adını giriniz." aria-describedby="basic-addon1">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Etiket Aktif Mi? : </span>
                    </div>
                    <input type="text" asp-for="IsActive" class="form-control" placeholder="True yada False giriniz." aria-describedby="basic-addon1">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Etiket Silindi Mi? : </span>
                    </div>
                    <input type="text" asp-for="IsDeleted" class="form-control" placeholder="True yada False giriniz." aria-describedby="basic-addon1">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="IsDeleted" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2 col-12">Etiket Güncelle!</button>
            </form>
        </div>
    </div>
</div>

