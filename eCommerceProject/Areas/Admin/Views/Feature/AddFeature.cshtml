@using DtoLayer.Dtos.FeatureDtos;
@model CreateFeatureDto

@{
    ViewData["Title"] = "AddFeature";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-md-12">
    <div class="card">
        <div class="header">
            <h2> Yeni Özellik Ekleme Sayfası</h2>
        </div>
        <div class="body">
            <form method="post" class="forms-sample">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Özelliğin Adı : </span>
                    </div>
                    <input type="text" asp-for="Title1" class="form-control" placeholder="Özelliğin adını giriniz." aria-describedby="basic-addon1">
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Title1" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2 col-12">Özellik Ekle!</button>
            </form>
        </div>
    </div>
</div>

